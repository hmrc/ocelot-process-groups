@model ProductGrouping.Controllers.Helpers.PaginatedList<ProductGrouping.Models.ProductGroup>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-muted">Product Grouping</h4>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBox("SearchString", null, new { @class = "form-control" })
        <p class="form-text text-muted">Look for an existing product group</p>
        <input type="submit" class="btn btn-primary" value="Search" />
        <a class="btn btn-primary" asp-action="Index">Back to Full List</a>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                <p class="text-muted">Product Reference</p>
            </th>
            <th>
                <p class="text-muted">Product Owner</p>
            </th>
            <th>
                <p class="text-muted">Parent Reference</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductReference)
                </td>
                <td>
                    <button class="btn btn-primary" data-toggle="modal" data-target="#OwnerModal" data-whatever="@item.ProductOwner">
                        @Html.DisplayFor(modelItem => item.ProductOwner)
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent.ProductReference)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="OwnerModal" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Person details.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <label class="control-label">PID</label>
                        <input id="modalPid" class="form-control" disabled />

                        <label class="control-label">Name</label>
                        <input id="modalName" class="form-control" disabled />

                        <label class="control-label">Phone</label>
                        <input id="modalPhone" class="form-control" disabled />

                        <label class="control-label">Email</label>
                        <input id="modalEmail" class="form-control" disabled />
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Close
                </button>
            </div>

        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary @nextDisabled">
    Next
</a>

