@model ProductGrouping.Models.ProductGroup

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-muted">Edit Product Grouping</h4>

<div class="row">
    <table class="table">
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ProductReference)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductReference)
                </td>
            </tr>            
        </tbody>
    </table>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProductReference" />          
            <div class="form-group">
                <label asp-for="ProductOwner" class="control-label"></label>
                <input asp-for="ProductOwner" id="Owners" onblur="getOwnerNames('Edit')" class="form-control" />
                <span asp-validation-for="ProductOwner" class="text-danger"></span>
                <div id="productOwnerName"></div>
            </div>
            <div class="form-group">
                <label class="control-label">Parent Reference</label>
                <select asp-for="ParentId" asp-items="@ViewBag.Products" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
                <div class="text-danger">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
